@{
    ViewData["Title"] = "Secret Page";
}

<h2>Protected Page</h2>
<p class="lead">You’re logged in! This page is protected with <code>[Authorize]</code>.</p>

<ul>
    <li><strong>User:</strong> @User.Identity?.Name</li>
    <li><strong>Email:</strong> @User.Claims.FirstOrDefault(c => c.Type == "email")?.Value</li>
</ul>

<p><a class="btn btn-secondary" href="/logout">Logout</a></p>
